%h1 Quizes

%a{:href => new_admin_quiz_path(), :class => "new"}
  .plus +
  New Quiz

%section.quizzes
  - @quizzes.each do |quiz|
    %div[quiz]
      .title= link_to quiz.title, ui_link("/quiz/" + quiz.id)
      .state= quiz.state
      .actions
        = link_to "Edit", edit_admin_quiz_path(quiz)
        - if quiz.draft?
          = link_to "Publish", publish_admin_quiz_path(quiz), method: :post
